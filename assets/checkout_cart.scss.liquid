main{
	margin: 0 0 -256px;
}

h2{
	font-family: 'HelveticaNeueLTStd-LtEx', Helvetica, Arial, sans-serif;
    font-size: 20px;
    margin-bottom: 0.75em;
    line-height: 1em;
    letter-spacing: 1px;
    text-transform: none;
    color: #323232;
}

.cart .sidebar{
	box-sizing:border-box;
	position: relative;
	background-color: #fafafa;
    box-shadow: 1px 0 0 #e1e1e1 inset;
    width: 34%;
    padding:4em 4% 0 4%;
    background-position: left top;
    float: right;
    min-height: 100%;
    @media (max-width: 1023px){display:inline-block;width:100%;padding:20px 20px 0 20px;margin-bottom:20px; border:0;box-shadow: none;box-sizing:border-box;display:inline-block;min-height: 0;border-bottom:1px solid #e1e1e1;}
}
.cart .sidebar:after{
	content: "";
    display: block;
    width: 300%;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    background: #fafafa;
    z-index: -1;
    box-shadow: 0 -1px 0 #e1e1e1 inset;
    height: 100vh;
    box-shadow: 1px 0 0 #e1e1e1 inset;
    @media (max-width: 1023px){height: auto !important;}
}
.sidebar p{
	font-size: 12px;
    line-height: 1.2em;
    color:#717171;
}

.cart .wrap{
	display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-flex-direction: column;
    -ms-flex-direction: column;
    flex-direction: column;
    -webkit-flex: 1 0 auto;
    -ms-flex: 1 0 auto;
    flex: 1 0 auto;
	padding: 0;
    width: 100%;
    max-width: 100%;
    -webkit-flex-direction: row-reverse;
    -ms-flex-direction: row-reverse;
    flex-direction: row-reverse;
    @media (max-width: 1023px){
    	 -webkit-flex-direction: row;
    -ms-flex-direction: row;
    flex-direction: row;
    @media (max-width: 1023px){display:inline-block;width:100%;padding:0;box-sizing:border-box;}
    }
}

.cart .main{
	padding-top: 4em;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-flex-direction: column;
    -ms-flex-direction: column;
    flex-direction: column;
    -webkit-flex: 1 0 auto;
    -ms-flex: 1 0 auto;
    width: 52%;
    flex: 1 0 auto;
    float: left;
    padding-left: 4%;
    padding-right: 4%;
    @media (max-width: 1023px){width:100%;padding:0 20px;box-sizing:border-box;display:inline-block;}
}

.breadcrumb{
	margin-bottom:25px;
	margin-top: 0.55em;
}
.breadcrumb__item {
    display: inline-block;
    font-size: 12px;
    color: #999999;
}
.breadcrumb__item a{
	font-size: 12px;
}

.breadcrumb__item:after {
    content: "";
    display: inline-block;
    width: 6px;
    height: 11px;
    vertical-align: middle;
    margin: 0 0.5em;
    background-image: url('//cdn.shopify.com/s/assets/checkout_stable/breadcrumb-chevron-dark-15478410e07b7afe1ffe7702a05eda4b464780cdc100b1daababbe0bd27758d3.png');
    background-image: url('//cdn.shopify.com/s/assets/checkout_stable/breadcrumb-chevron-dark-71295905fab7d92dc89e59a955fa7218537cef31e8fa375de8d0227f4138ce51.svg'),none;
}

.breadcrumb__item:last-child:after{
	display: none;
}

#cart_form{height:100vh;display:flex;}

#cart_form .content{padding:0 !important;}

footer,.footerpad{display:none;}

.action_button{
	background: transparent;
	font-weight: 300;
	border:1px solid #000;
	color: #000;
}

.clearfix{
	clear:both;
}

.drawer--sidebar.drawer--left .drawer-contents{
	overflow-x:hidden;
}

.line{
	padding-bottom: 20px;
	border-top: 1px solid #e1e1e1;
}

.add_to_cart{
	background: #000;
	color: #fff;
	@media (max-width: 1023px){width:auto !important; margin:0 auto;}
	cursor: pointer;
}

.continue_shopping .cta-button{
	padding-left: 0;border: 0;
	@media (max-width: 1023px){width:auto !important; margin:0 auto;}
}

.shopping_actions{
	margin: 100px 0 50px 0;
	display: block;	
	@media (max-width: 1023px){margin:25px 0 15px 0;}
}

.two.columns{
	width: 25%;
}
.two.columns img{
} 


.five.columns{
	padding-left: 10px;
	width:70%;
}
.top-menu{display: none;}